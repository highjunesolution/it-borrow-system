generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//////////////////////////
// ENUMS
/////////////////////////

enum Role {
  USER
  IT
  ADMIN
}

enum AssetStatus {
  AVAILABLE
  BORROWED
  MAINTENANCE
  RETIRED
  IT_OWNER
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  BORROWED
  RETURNED
  OVERDUE
}

//////////////////////////
// USER
/////////////////////////

model Department {
  id        Int      @id @default(autoincrement())
  prefix    Int
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sections Section[] // 1:N relation
}

model Section {
  id           Int        @id @default(autoincrement())
  prefix       Int?
  name         String
  departmentId Int
  department   Department @relation(fields: [departmentId], references: [id])
  users        User[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, departmentId]) // กันชื่อซ้ำใน department เดียวกัน
}

model User {
  id        Int    @id @default(autoincrement())
  empCode   String @unique
  firstName String
  lastName  String
  email     String @unique
  role      Role   @default(USER)

  section   Section @relation(fields: [sectionId], references: [id])
  sectionId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  licenseSeats LicenseSeat[]
  requests     Request[]
}

//////////////////////////
// CATEGORY
/////////////////////////

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  assets    Asset[]
}

//////////////////////////
// ASSET
/////////////////////////

model Asset {
  id          Int         @id @default(autoincrement())
  assetCode   String      @unique
  name        String
  description String?
  status      AssetStatus @default(AVAILABLE)

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int

  assetImages AssetImage[]
  inventories Inventory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//////////////////////////
// ASSET IMAGE
/////////////////////////

model AssetImage {
  id       Int    @id @default(autoincrement())
  assetId  Int
  imageUrl String
  asset    Asset  @relation(fields: [assetId], references: [id], onDelete: Cascade)

  isPrimary Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//////////////////////////
// INVENTORY (เครื่องจริงแต่ละตัว)
/////////////////////////

model Inventory {
  id           Int     @id @default(autoincrement())
  serialNumber String  @unique
  location     String?
  isAvailable  Boolean @default(true)

  asset   Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)
  assetId Int

  requests Request[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([assetId])
}

//////////////////////////
// License (IT จัดการเอง)
/////////////////////////

model License {
  id         Int       @id @default(autoincrement())
  name       String
  vendor     String?
  expireDate DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  seats LicenseSeat[]
}

model LicenseSeat {
  id         Int       @id @default(autoincrement())
  licenseId  Int
  seatKey    String? // ถ้าแต่ละ seat มี key แยก
  isUsed     Boolean   @default(false)
  assignedAt DateTime?
  userId     Int?

  license License @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id])

  @@unique([licenseId, seatKey])
  @@index([userId])
}

//////////////////////////
// REQUEST
/////////////////////////

model Request {
  id          Int           @id @default(autoincrement())
  userId      Int
  inventoryId Int
  status      RequestStatus @default(PENDING)

  requestDate DateTime  @default(now())
  approveDate DateTime?
  dueDate     DateTime?
  returnDate  DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  inventory Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([inventoryId])
  @@index([status])
}
